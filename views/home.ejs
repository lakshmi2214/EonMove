                    .logistics-staggered-item {
                        gap: 15px;
                    }

                    .logistics-number {
                        width: 55px;
                        height: 55px;
                        font-size: 1.4rem;
                        border-width: 3px;
                    }

                    .logistics-content-card {
                        padding: 1.2rem 1.5rem;
                    }
                }

                .logistics-staggered-item:hover {
                    transform: scale(1.02) translateX(10px);
                }
