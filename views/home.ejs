                    .step-1 {
                        margin-left: 0;
                    }

                    .step-2 {
                        margin-left: 8%;
                    }

                    .step-3 {
                        margin-left: 16%;
                    }

                    .step-4 {
                        margin-left: 24%;
                    }
                }

                /* Mobile refinement */
