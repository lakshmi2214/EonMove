<%- include('partials/header') %>

    <main>
        <!-- About Banner Section -->
        <section class="page-banner"
            style="background-image: url('https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?q=80&w=2070&auto=format&fit=crop');">
            <div class="page-banner-content">
                <h1 style="color: white; font-size: 3rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">About EonMove</h1>
            </div>
        </section>

        <!-- Section: Welcome & Vision/Mission -->
        <section style="padding: 5rem 0; background: #fff;">
            <div class="container" style="text-align: center;">
                <span
                    style="color: #3b82f6; font-weight: 700; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 2px;">Welcome
                    to EonMove</span>
                <h2 style="font-size: 2.8rem; font-weight: 800; margin-top: 1rem; color: #1e293b;">Empowering Logistics.
                    Igniting Green Growth.</h2>
                <p style="max-width: 800px; margin: 1.5rem auto 4rem; color: #64748b; line-height: 1.8;">
                    At EonMove, we are committed to revolutionizing urban deliveries through a uniquely connected
                    electric vehicle ecosystem that bridges the gap between efficiency and environmental responsibility.
                </p>

                <div class="row g-4 mb-5 pb-5">
                    <!-- Vision Card -->
                    <div class="col-md-6 text-start">
                        <div class="h-100"
                            style="background: #f8fbff; border: 1px solid #eef2ff; padding: 3rem 2.5rem; border-radius: 20px; transition: all 0.3s ease;">
                            <h3 style="color: #3b82f6; font-size: 1.5rem; font-weight: 800; margin-bottom: 1.5rem;">Our
                                Vision</h3>
                            <p style="color: #64748b; line-height: 1.7;">To lead the global transition to sustainable
                                urban
                                logistics by becoming the most reliable and green EV ecosystem provider in India.</p>
                        </div>
                    </div>
                    <!-- Mission Card -->
                    <div class="col-md-6 text-start">
                        <div class="h-100"
                            style="background: #f8fbff; border: 1px solid #eef2ff; padding: 3rem 2.5rem; border-radius: 20px; transition: all 0.3s ease;">
                            <h3 style="color: #3b82f6; font-size: 1.5rem; font-weight: 800; margin-bottom: 1.5rem;">Our
                                Mission</h3>
                            <p style="color: #64748b; line-height: 1.7;">To provide seamless, tech-enabled, and
                                zero-emission logistics solutions that empower businesses to grow while protecting our
                                environment.</p>
                        </div>
                    </div>
                </div>

                <!-- Section: High Quality Services -->
                <div class="row align-items-center g-5 text-start">
                    <!-- Left Content -->
                    <div class="col-lg-6">
                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 1.5rem;">
                            <div style="height: 2px; width: 40px; background: #3b82f6;"></div>
                        </div>
                        <h2 style="font-size: 2.5rem; font-weight: 800; color: #1e293b; margin-bottom: 1.5rem;">A
                            High-Quality Logistics Experience</h2>
                        <p style="color: #64748b; line-height: 1.8; margin-bottom: 2rem;">
                            EonMove offers a complete suite of EV-driven logistics. From primary hub-to-hub movement to
                            hyper-local last-mile distribution, our technology ensures your goods are tracked in
                            real-time
                            and delivered with zero emissions.
                        </p>
                        <a href="/services" class="btn"
                            style="padding: 12px 30px; border-radius: 50px; background: #3b82f6;">Explore Services</a>
                    </div>

                    <!-- Right Graphic (Circular Founder Image + Brand Shapes) -->
                    <div class="col-lg-6">
                        <div
                            style="position: relative; height: 500px; display: flex; align-items: center; justify-content: center;">
                            <!-- Decorative Circle Backdrops (Brand Colors) -->
                            <div
                                style="position: absolute; width: 380px; height: 380px; background: #9bcf5a; border-radius: 50%; opacity: 0.15; z-index: 1; transform: translate(-20px, -20px);">
                            </div>
                            <div
                                style="position: absolute; width: 380px; height: 380px; background: #29abe2; border-radius: 50%; opacity: 0.1; z-index: 1; transform: translate(20px, 20px);">
                            </div>

                            <!-- Image Container -->
                            <div
                                style="position: relative; z-index: 2; background: white; padding: 10px; border-radius: 50%; box-shadow: 0 30px 60px rgba(0,0,0,0.12); border: 8px solid white;">
                                <div
                                    style="width: 320px; height: 320px; border-radius: 50%; overflow: hidden; border: 4px solid #9bcf5a; background: #f8fafc;">
                                    <img src="/images/main founder.jpeg" alt="Founder"
                                        style="width: 100%; height: 100%; object-fit: cover; filter: contrast(1.05);">
                                </div>

                                <!-- Floating Badge -->
                                <div
                                    style="position: absolute; bottom: 10px; right: 10px; background: #29abe2; color: white; padding: 12px 20px; border-radius: 50px; font-weight: 800; font-size: 0.9rem; box-shadow: 0 10px 20px rgba(41,171,226,0.3); border: 3px solid white;">
                                    Founder
                                </div>
                            </div>

                            <!-- Small Design Elements -->
                            <div
                                style="position: absolute; top: 10%; left: 15%; width: 25px; height: 25px; background: #9bcf5a; border-radius: 50%; z-index: 1;">
                            </div>
                            <div
                                style="position: absolute; bottom: 15%; left: 10%; width: 40px; height: 40px; border: 4px solid #29abe2; border-radius: 50%; z-index: 1;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>