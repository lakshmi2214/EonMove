        <style>
            /* Zig-Zag Leadership Layout */
            .zigzag-leadership-wrapper {
                max-width: 1050px;
                margin: 0 auto;
                display: flex;
                flex-direction: column;
                gap: 5rem;
            }

            .zigzag-row {
                display: flex;
                align-items: center;
                gap: 4rem;
            }

            /* Reversed row: image on left, text on right */
            .zigzag-row.zigzag-reverse {
                flex-direction: row-reverse;
            }

            /* Text side */
            .zigzag-text {
                flex: 1;
                min-width: 0;
            }

            .zigzag-role-badge {
                display: inline-block;
                background: #f0fdf4;
                color: #00874e;
                font-size: 0.8rem;
                font-weight: 800;
                text-transform: uppercase;
                letter-spacing: 1.5px;
                padding: 6px 18px;
                border-radius: 50px;
                border: 1.5px solid rgba(155, 207, 90, 0.5);
                margin-bottom: 1.2rem;
            }

            .zigzag-name {
                font-size: 2rem;
                font-weight: 950;
                color: #1e293b;
                margin-bottom: 1rem;
                line-height: 1.2;
            }

            .zigzag-desc {
                font-size: 1.05rem;
                color: #64748b;
                line-height: 1.8;
                font-weight: 500;
                margin-bottom: 1.5rem;
            }

            .zigzag-accent-line {
                height: 5px;
                width: 60px;
                background: linear-gradient(90deg, #9bcf5a, #29abe2);
                border-radius: 10px;
            }

            /* Image side */
            .zigzag-image-wrapper {
                flex: 0 0 380px;
                position: relative;
            }

            .zigzag-image-card {
                position: relative;
                z-index: 2;
                background: #ffffff;
                padding: 1rem;
                border-radius: 30px;
                border: 4px solid rgba(155, 207, 90, 0.4);
                box-shadow: 0 20px 50px rgba(155, 207, 90, 0.15), 0 0 15px rgba(155, 207, 90, 0.08);
                transition: transform 0.4s ease, box-shadow 0.4s ease;
                overflow: hidden;
            }

            .zigzag-image-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 30px 60px rgba(155, 207, 90, 0.2), 0 0 20px rgba(155, 207, 90, 0.12);
            }

            .zigzag-image-card img {
                width: 100%;
                aspect-ratio: 1 / 1;
                object-fit: cover;
                object-position: top;
                border-radius: 22px;
                display: block;
            }

            .zigzag-bg-shape {
                position: absolute;
                top: 15px;
                right: -15px;
                width: 100%;
                height: 100%;
                background: rgba(155, 207, 90, 0.08);
                border-radius: 30px;
                z-index: 1;
                transform: rotate(3deg);
                pointer-events: none;
            }

            .zigzag-reverse .zigzag-bg-shape {
                right: auto;
                left: -15px;
                transform: rotate(-3deg);
            }

            /* Responsive: tablet */
            @media (max-width: 992px) {
                .zigzag-row {
                    gap: 2.5rem;
                }

                .zigzag-image-wrapper {
                    flex: 0 0 300px;
                }

                .zigzag-name {
                    font-size: 1.7rem;
                }
            }

            /* Responsive: mobile — stack vertically */
            @media (max-width: 768px) {
                .zigzag-leadership-wrapper {
                    gap: 3.5rem;
                }

                .zigzag-row,
                .zigzag-row.zigzag-reverse {
                    flex-direction: column;
                    text-align: center;
                }

                .zigzag-image-wrapper {
                    flex: 0 0 auto;
                    width: 100%;
                    max-width: 320px;
                    margin: 0 auto;
                }

                .zigzag-text {
                    order: 2;
                }

                .zigzag-image-wrapper {
                    order: 1;
                }

                .zigzag-accent-line {
                    margin: 0 auto;
                }

                .zigzag-bg-shape,
                .zigzag-reverse .zigzag-bg-shape {
                    right: -10px;
                    left: auto;
                    transform: rotate(2deg);
                }

                .zigzag-name {
                    font-size: 1.5rem;
                }
            }
        </style>
