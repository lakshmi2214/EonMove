<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EpnMove | Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        :root {
            --primary: #00874e;
            --secondary: #9bcf5a;
            --dark: #1e293b;
        }

        body {
            background: #f8fafc;
            font-family: 'Inter', sans-serif;
            padding-top: 40px;
        }

        .admin-header {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-excel {
            background: var(--primary);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 12px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: 0.3s;
            text-decoration: none;
        }

        .btn-excel:hover {
            background: #006b3e;
            color: white;
            transform: translateY(-2px);
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.03);
            margin-bottom: 30px;
            overflow: hidden;
        }

        .card-header {
            background: white;
            border-bottom: 1px solid #f1f5f9;
            padding: 1.5rem;
        }

        .card-header h3 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--dark);
        }

        .table thead {
            background: #f8fafc;
        }

        .table th {
            font-weight: 600;
            color: #64748b;
            text-transform: uppercase;
            font-size: 0.75rem;
            border: none;
            padding: 1rem;
        }

        .table td {
            vertical-align: middle;
            padding: 1rem;
            color: var(--dark);
            border-bottom: 1px solid #f1f5f9;
        }

        .badge-type {
            background: #e0f2fe;
            color: #0369a1;
            padding: 5px 12px;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 600;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="admin-header">
            <div>
                <h1 style="font-weight: 900; color: var(--dark); margin: 0;">EpnMove Submissions</h1>
                <p class="text-muted m-0">Real-time data for senior management</p>
            </div>
            <div class="d-flex gap-3">
                <% if (spreadsheetId) { %>
                    <a href="https://docs.google.com/spreadsheets/d/<%= spreadsheetId %>" target="_blank"
                        class="btn-excel" style="background: #107c10;">
                        <i data-lucide="external-link"></i>
                        Open Google Sheet
                    </a>
                    <% } %>
                        <a href="/admin/download" class="btn-excel">
                            <i data-lucide="file-spreadsheet"></i>
                            Download Latest Excel
                        </a>
            </div>
        </div>

        <!-- Enquiry Form Table -->
        <div class="card">
            <div class="card-header d-flex align-items-center gap-2">
                <i data-lucide="helping-hand" color="#00874e"></i>
                <h3>Enquiry Form Submissions</h3>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Organisation</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% enquiries.forEach(item=> { %>
                            <tr>
                                <td style="white-space: nowrap; color: #64748b;">
                                    <%= item.Date %>
                                </td>
                                <td style="font-weight: 600;">
                                    <%= item.Name %>
                                </td>
                                <td>
                                    <div>
                                        <%= item.Email %>
                                    </div>
                                    <div style="font-size: 0.85rem; color: #64748b;">
                                        <%= item.Phone %>
                                    </div>
                                </td>
                                <td>
                                    <%= item.Organisation %>
                                </td>
                                <td style="max-width: 300px; font-size: 0.9rem;">
                                    <%= item.Message %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Partnership Form Table -->
        <div class="card">
            <div class="card-header d-flex align-items-center gap-2">
                <i data-lucide="handshake" color="#00874e"></i>
                <h3>Partnership Form Submissions</h3>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Type</th>
                            <th>Location</th>
                            <th>Source</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% partnerships.forEach(item=> { %>
                            <tr>
                                <td style="white-space: nowrap; color: #64748b;">
                                    <%= item.Date %>
                                </td>
                                <td style="font-weight: 600;">
                                    <%= item.Name %>
                                </td>
                                <td>
                                    <div>
                                        <%= item.Email %>
                                    </div>
                                    <div style="font-size: 0.85rem; color: #64748b;">
                                        <%= item.Phone %>
                                    </div>
                                </td>
                                <td><span class="badge-type">
                                        <%= item.Type %>
                                    </span></td>
                                <td>
                                    <%= item.City %>, <%= item.State %>
                                </td>
                                <td>
                                    <%= item.Found_Us %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();
        // Auto refresh every 60 seconds
        setTimeout(() => { location.reload(); }, 60000);
    </script>
</body>

</html>