    <!-- Thank You Popup Modal -->
    <div class="popup-overlay" id="thankYouPopup">
        <div class="thank-you-popup">
            <h2>Thank You</h2>
            <p>We will meet u soon</p>
            <button class="close-popup-btn" onclick="closePopup()">Great!</button>
        </div>
    </div>

    <script>
        // Existing FAQ Accordion Logic
        document.querySelectorAll('.faq-card').forEach(card => {
            card.addEventListener('click', () => {
                const isActive = card.classList.contains('active');

                // Close all cards
                document.querySelectorAll('.faq-card').forEach(c => {
                    c.classList.remove('active');
                    c.querySelector('.faq-icon-btn').innerText = '+';
                });

                // Toggle chosen card
                if (!isActive) {
                    card.classList.add('active');
                    card.querySelector('.faq-icon-btn').innerText = '−';
                }
            });
        });

        // Form Submission and Popup Logic
        const enquiryForm = document.querySelector('.enquiry-form-card form');
        const thankYouPopup = document.getElementById('thankYouPopup');

        if (enquiryForm) {
            enquiryForm.addEventListener('submit', (e) => {
                e.preventDefault(); // Prevent actual submission for demo

                // Show the popup
                thankYouPopup.style.display = 'flex';

                // Optional: Reset the form
                enquiryForm.reset();
            });
        }

        function closePopup() {
            thankYouPopup.style.display = 'none';
        }
    </script>

