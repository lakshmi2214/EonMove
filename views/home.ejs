            <style>
                .logistics-staggered-wrapper {
                    max-width: 1000px;
                    margin: 0 auto;
                    display: flex;
                    flex-direction: column;
                    gap: 1.5rem;
                    position: relative;
                }

                .logistics-staggered-item {
                    display: flex;
                    align-items: center;
                    gap: 25px;
                    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
                }

                .logistics-number {
                    width: 70px;
                    height: 70px;
                    background: #ffffff;
                    color: #00874e;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 1.8rem;
                    font-weight: 900;
                    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
                    flex-shrink: 0;
                    border: 4px solid #9bcf5a;
                    position: relative;
                    z-index: 2;
                }

                .logistics-content-card {
                    background: #ffffff;
                    padding: 1.8rem 2.5rem;
                    border-radius: 12px 12px 12px 12px;
                    flex-grow: 1;
                    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.08);
                    border-left: 10px solid #40b8ea;
                    max-width: 750px;
                }

