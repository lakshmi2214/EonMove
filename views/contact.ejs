<%- include('partials/header') %>

    <!-- Contact Banner -->
    <section class="page-banner"
        style="background-image: url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=2070&auto=format&fit=crop');">
        <div class="page-banner-content">
            <h1 style="color: white; font-size: 3rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);"></h1>
        </div>
    </section>

    <main style="background: #f8fafc; padding-bottom: 6rem;">
        <section class="section" style="padding-top: 4rem;">
            <div class="container">
                <div style="text-align: center; margin-bottom: 3rem;">
                    <h2 style="font-size: 2.8rem; font-weight: 900; color: #1e293b; margin-bottom: 1rem;">Contact Us
                    </h2>
                    <p style="color: #64748b; font-size: 1.1rem; max-width: 600px; margin: 0 auto;">Join hands with
                        EonMove to revolutionize sustainable urban logistics. Fill out the form below to get started.
                    </p>
                </div>

                <div class="partnership-form-container"
                    style="max-width: 900px; margin: 0 auto; background: white; padding: 4rem; border-radius: 2rem; box-shadow: 0 20px 50px rgba(0,0,0,0.08); position: relative; overflow: hidden; border-top: 8px solid #9bcf5a;">
                    <!-- Decorative background element based on user image -->
                    <div
                        style="position: absolute; top: -100px; right: -100px; width: 300px; height: 300px; background: #9bcf5a; transform: rotate(45deg); opacity: 0.1; z-index: 1;">
                    </div>
                    <div
                        style="position: absolute; top: -50px; right: -50px; width: 150px; height: 150px; background: #7bc5ed; transform: rotate(45deg); opacity: 0.2; z-index: 1;">
                    </div>

                    <form id="partnershipForm" style="position: relative; z-index: 2;">
                        <!-- Row 1: Name and Mobile -->
                        <div class="form-row"
                            style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
                            <div class="form-group">
                                <label
                                    style="display: block; margin-bottom: 0.8rem; font-weight: 700; color: #1e293b;">Full
                                    Name</label>
                                <input type="text" placeholder="Your Name" required
                                    style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 12px; font-size: 1rem; transition: all 0.3s ease;">
                            </div>
                            <div class="form-group">
                                <label
                                    style="display: block; margin-bottom: 0.8rem; font-weight: 700; color: #1e293b;">Mobile
                                    Number</label>
                                <input type="tel" pattern="[0-9]{10}"
                                    title="Please enter a valid 10-digit mobile number"
                                    placeholder="10-digit Mobile Number" required
                                    style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 12px; font-size: 1rem;">
                            </div>
                        </div>

                        <!-- Row 2: Mail-Id and Type -->
                        <div class="form-row"
                            style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
                            <div class="form-group">
                                <label
                                    style="display: block; margin-bottom: 0.8rem; font-weight: 700; color: #1e293b;">Mail-Id</label>
                                <input type="email" placeholder="example@domain.com" required
                                    style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 12px; font-size: 1rem;">
                            </div>
                            <div class="form-group">
                                <label
                                    style="display: block; margin-bottom: 0.8rem; font-weight: 700; color: #1e293b;">Inquiry
                                    Type</label>
                                <select required
                                    style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 12px; font-size: 1rem; background: white; cursor: pointer;">
                                    <option value="" disabled selected>Choose an Option</option>
                                    <option>Attach your EV</option>
                                    <option>Work with driver partner</option>
                                    <option>Media Enquiry</option>
                                    <option>None of the Above</option>
                                </select>
                            </div>
                        </div>

                        <!-- Row 3: State and City -->
                        <div class="form-row"
                            style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
                            <div class="form-group">
                                <label
                                    style="display: block; margin-bottom: 0.8rem; font-weight: 700; color: #1e293b;">State</label>
                                <input type="text" placeholder="Your State" required
                                    style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 12px; font-size: 1rem;">
                            </div>
                            <div class="form-group">
                                <label
                                    style="display: block; margin-bottom: 0.8rem; font-weight: 700; color: #1e293b;">City</label>
                                <input type="text" placeholder="Your City" required
                                    style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 12px; font-size: 1rem;">
                            </div>
                        </div>

                        <!-- Row 4: How did you find EonMove -->
                        <div class="form-group" style="margin-bottom: 3rem;">
                            <label style="display: block; margin-bottom: 0.8rem; font-weight: 700; color: #1e293b;">How
                                did you find EonMove?</label>
                            <select required
                                style="width: 100%; padding: 1rem; border: 2px solid #e2e8f0; border-radius: 12px; font-size: 1rem; background: white; cursor: pointer;">
                                <option value="" disabled selected>Select an option</option>
                                <option>Google Search</option>
                                <option>Website</option>
                                <option>Social Media</option>
                                <option>Reference</option>
                                <option>Saw Eonmove Vehicle on Road</option>
                                <option>Other</option>
                            </select>
                        </div>

                        <div style="text-align: center;">
                            <button type="submit" class="btn"
                                style="background: #9bcf5a; color: white; padding: 1.2rem 4rem; border-radius: 50px; font-size: 1.2rem; font-weight: 800; border: none; cursor: pointer; transition: all 0.3s ease; box-shadow: 0 10px 20px rgba(155,207,90,0.3);">Submit
                                Partnership Enquiry</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <!-- Thank You Popup Modal (Synced with home) -->
    <div class="popup-overlay" id="thankYouPopup">
        <div class="thank-you-popup">
            <h2 style="color: #9bcf5a;">Thank You</h2>
            <p style="color: #7bc5ed;">We will meet u soon</p>
            <button class="close-popup-btn" onclick="closePopup()" style="background: #9bcf5a;">Great!</button>
        </div>
    </div>

    <script>
        const partnershipForm = document.getElementById('partnershipForm');
        const thankYouPopup = document.getElementById('thankYouPopup');

        if (partnershipForm) {
            partnershipForm.addEventListener('submit', (e) => {
                e.preventDefault();
                thankYouPopup.style.display = 'flex';
                partnershipForm.reset();
            });
        }

        function closePopup() {
            thankYouPopup.style.display = 'none';
        }
    </script>

    <%- include('partials/footer') %>