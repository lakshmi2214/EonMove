<%- include('partials/header') %>

    <main>
        <!-- About Banner Section -->
        <section class="page-banner"
            style="background-image: url('https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?q=80&w=2070&auto=format&fit=crop'); height: 400px; background-position: center; background-size: cover; position: relative; display: flex; align-items: center; justify-content: center;">
            <div class="page-banner-content" style="position: relative; z-index: 2; text-align: center;">
                <h1 style="color: white; font-size: 3.5rem; font-weight: 800; text-shadow: 0 4px 10px rgba(0,0,0,0.3);">
                    About EonMove</h1>
            </div>
            <div
                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.4); z-index: 1;">
            </div>
        </section>

        <!-- Section: Vision & Mission -->
        <section style="padding: 6rem 0; border-bottom: 1px solid #e2e8f0;">
            <div class="container">
                <div style="text-align: center; margin-bottom: 4rem;">
                    <h2 style="font-size: 2.8rem; font-weight: 800; color: #1e293b;">Our Purpose</h2>
                    <div style="height: 4px; width: 60px; background: #9bcf5a; margin: 20px auto; border-radius: 10px;">
                    </div>
                </div>

                <div class="row g-4">
                    <!-- Vision Section -->
                    <div class="col-md-6">
                        <div
                            style="background: #29abe2; padding: 4rem 3rem; border-radius: 30px; border: 4px solid #fff; box-shadow: 0 20px 40px rgba(41,171,226,0.15); height: 100%; color: white;">
                            <div
                                style="display: inline-flex; align-items: center; justify-content: center; width: 60px; height: 60px; background: white; border-radius: 50%; margin-bottom: 2rem;">
                                <i data-lucide="eye" style="color: #29abe2;"></i>
                            </div>
                            <h3 style="font-size: 2.2rem; font-weight: 800; margin-bottom: 1.5rem; color: white;">Our
                                Vision</h3>
                            <p style="font-size: 1.15rem; line-height: 1.8; color: white;">
                                To lead the global transition to sustainable urban logistics by becoming the most
                                reliable and green EV ecosystem provider in India.
                            </p>
                        </div>
                    </div>

                    <!-- Mission Section -->
                    <div class="col-md-6">
                        <div
                            style="background: #9bcf5a; padding: 4rem 3rem; border-radius: 30px; border: 4px solid #fff; box-shadow: 0 20px 40px rgba(155,207,90,0.15); height: 100%; color: white;">
                            <div
                                style="display: inline-flex; align-items: center; justify-content: center; width: 60px; height: 60px; background: white; border-radius: 50%; margin-bottom: 2rem;">
                                <i data-lucide="target" style="color: #9bcf5a;"></i>
                            </div>
                            <h3 style="font-size: 2.2rem; font-weight: 800; margin-bottom: 1.5rem; color: white;">Our
                                Mission</h3>
                            <p style="font-size: 1.15rem; line-height: 1.8; color: white;">
                                To provide seamless, tech-enabled, and zero-emission logistics solutions that empower
                                businesses to grow while protecting our environment. We strive to create a future where
                                every delivery is clean, efficient, and contributes to a healthier planet.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section 3: High Quality Experience -->
        <section style="padding: 8rem 0; background: #f8fafc;">
            <div class="container">
                <div class="row align-items-center g-5">
                    <!-- Left Content -->
                    <div class="col-lg-6">
                        <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 2rem;">
                            <div style="height: 4px; width: 50px; background: #29abe2; border-radius: 10px;"></div>
                            <span
                                style="font-weight: 800; color: #29abe2; text-transform: uppercase; letter-spacing: 2px; font-size: 0.9rem;">The
                                EonMove Advantage</span>
                        </div>
                        <h2
                            style="font-size: 3rem; font-weight: 950; color: #1e293b; margin-bottom: 2.5rem; line-height: 1.1;">
                            A High-Quality <br />Logistics Experience</h2>
                        <p style="color: #64748b; line-height: 2; font-size: 1.2rem; margin-bottom: 3.5rem;">
                            EonMove offers a complete suite of EV-driven logistics. From primary hub-to-hub movement to
                            hyper-local last-mile distribution, our technology ensures your goods are tracked in
                            real-time and delivered with zero emissions.
                        </p>
                        <a href="/services" class="btn"
                            style="padding: 18px 45px; border-radius: 50px; background: #29abe2; color: white; font-weight: 900; font-size: 1.1rem; box-shadow: 0 10px 25px rgba(41,171,226,0.3); transition: all 0.3s ease;">Explore
                            Services</a>
                    </div>

                    <!-- Right Graphic -->
                    <div class="col-lg-6">
                        <div
                            style="position: relative; height: 550px; display: flex; align-items: center; justify-content: center;">
                            <!-- Simplified Professional Card -->
                            <div
                                style="position: relative; z-index: 2; background: white; padding: 2.5rem; border-radius: 35px; box-shadow: 0 40px 100px rgba(0,0,0,0.06); border: 1px solid #e2e8f0; width: 100%; max-width: 420px;">
                                <div
                                    style="width: 100%; aspect-ratio: 4/5; border-radius: 20px; overflow: hidden; margin-bottom: 2.5rem;">
                                    <img src="/images/main founder.jpeg" alt="EonMove Founder"
                                        style="width: 100%; height: 100%; object-fit: cover; filter: brightness(1.02) contrast(1.05);">
                                </div>
                                <div style="text-align: center;">
                                    <h4
                                        style="font-size: 1.8rem; font-weight: 900; color: #1e293b; margin-bottom: 10px;">
                                        Founder</h4>
                                    <div
                                        style="height: 5px; width: 60px; background: #9bcf5a; margin: 0 auto; border-radius: 10px;">
                                    </div>
                                </div>
                            </div>
                            <!-- Background Decoration -->
                            <div
                                style="position: absolute; top: 10%; right: 5%; width: 350px; height: 400px; background: #fff; border: 1px solid #f1f5f9; border-radius: 50px; z-index: 1; transform: rotate(5deg); box-shadow: 0 20px 50px rgba(0,0,0,0.02);">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section 4: Our Leadership -->
        <section style="padding: 10rem 0; background: #9bcf5a; position: relative; overflow: hidden;">
            <div class="container" style="position: relative; z-index: 2;">
                <div style="text-align: center; margin-bottom: 6rem;">
                    <h2 style="font-size: 3.5rem; font-weight: 950; color: #1e293b; letter-spacing: -1px;">Our
                        Leadership Team</h2>
                    <p style="color: #2b3a2a; margin-top: 1.5rem; font-weight: 700; font-size: 1.2rem; opacity: 0.8;">
                        The visionaries behind EonMove's green revolution.</p>
                    <div style="height: 6px; width: 80px; background: #29abe2; margin: 30px auto; border-radius: 10px;">
                    </div>
                </div>

                <div class="row g-5 justify-content-center">
                    <!-- Column 1 -->
                    <div class="col-lg-4 col-md-6">
                        <div class="h-100"
                            style="background: white; padding: 2.5rem; border-radius: 35px; box-shadow: 0 30px 60px rgba(0,0,0,0.08); border: 1px solid rgba(255,255,255,0.5); transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);">
                            <div
                                style="width: 100%; aspect-ratio: 4/5; border-radius: 20px; overflow: hidden; margin-bottom: 2.5rem; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                                <img src="/images/srikanth sir.jpg" alt="Founder"
                                    style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <h4 style="font-size: 1.6rem; font-weight: 900; color: #1e293b; margin-bottom: 12px;">
                                Co-Founder Name</h4>
                            <p style="font-size: 1rem; color: #4b5563; line-height: 1.8; font-weight: 500;">
                                Expert in sustainable logistics and EV technology integration. Leading the strategic
                                outreach and partnership initiatives at EonMove.
                            </p>
                        </div>
                    </div>

                    <!-- Column 2 -->
                    <div class="col-lg-4 col-md-6">
                        <div class="h-100"
                            style="background: white; padding: 2.5rem; border-radius: 35px; box-shadow: 0 30px 60px rgba(0,0,0,0.08); border: 1px solid rgba(255,255,255,0.5); transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);">
                            <div
                                style="width: 100%; aspect-ratio: 4/5; border-radius: 20px; overflow: hidden; margin-bottom: 2.5rem; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                                <img src="/images/founder 2.jpeg" alt="Founder"
                                    style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <h4 style="font-size: 1.6rem; font-weight: 900; color: #1e293b; margin-bottom: 12px;">
                                Co-Founder Name</h4>
                            <p style="font-size: 1rem; color: #4b5563; line-height: 1.8; font-weight: 500;">
                                Driving the technological core of TRACKK, ensuring seamless real-time visibility and
                                efficiency for our entire electric fleet operations.
                            </p>
                        </div>
                    </div>

                    <!-- Column 3 -->
                    <div class="col-lg-4 col-md-6">
                        <div class="h-100"
                            style="background: white; padding: 2.5rem; border-radius: 35px; box-shadow: 0 30px 60px rgba(0,0,0,0.08); border: 1px solid rgba(255,255,255,0.5); transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);">
                            <div
                                style="width: 100%; aspect-ratio: 4/5; border-radius: 20px; overflow: hidden; margin-bottom: 2.5rem; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                                <img src="/images/founder 3.jpeg" alt="Founder"
                                    style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <h4 style="font-size: 1.6rem; font-weight: 900; color: #1e293b; margin-bottom: 12px;">
                                Co-Founder Name</h4>
                            <p style="font-size: 1rem; color: #4b5563; line-height: 1.8; font-weight: 500;">
                                Focused on operational excellence and driver-partner growth, creating a supportive
                                ecosystem that empowers our workforce.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Decorative Background Shape -->
            <div
                style="position: absolute; top: -100px; left: -100px; width: 400px; height: 400px; background: rgba(255,255,255,0.1); border-radius: 50%;">
            </div>
        </section>
    </main>

    <style>
        @keyframes morph {
            0% {
                border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
            }

            100% {
                border-radius: 70% 30% 30% 70% / 70% 70% 30% 30%;
            }
        }

        .h-100:hover {
            transform: translateY(-15px);
        }
    </style>

    <%- include('partials/footer') %>